type User {
    id: ID!
    name: String!
    age: Int!
    todos: [Todo!]!
    createdAt: String!
    updatedAt: String!
}

input CreateUserInput {
    name: String!
    age: Int!
}
input UpdateUserInput {
    id: ID!
    name: String
    age: Int
}

extend type Query {
    user(id: ID): User
}


extend type Mutation {
    createUser(input: CreateUserInput!): User!
    updateUser(input: UpdateUserInput!): User!
}
